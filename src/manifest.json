{
  "manifest_version": 2,
  "name": "ts chrome extension template",
  "short_name": "ts chrome extension template",
  "description": "ts chrome extension template",
  "version": "0.0.1",
  "author": "Takumi Oda",

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": []
    }
  ],

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },

  "web_accessible_resources": [
    "icons/*"
  ],

  "permissions": [
    "tabs"
  ]
}
